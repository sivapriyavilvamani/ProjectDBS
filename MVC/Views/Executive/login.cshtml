@model DBS_services.Models.EXRegistration
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "login";
    ViewBag.Data = @HttpContextAccessor.HttpContext.Session.GetString("Error");
    
}
@if (ViewBag.Data == "Error")
{
    <div><h2>Entered User ID or Password is incorrect</h2></div>
}

<br />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4" style="background-color:navajowhite">
        <h4>Executive login</h4>
        <hr />
        <form asp-action="login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ExecName" class="font-weight-bold"></label>
                <input asp-for="ExecName" type="text" class="form-control" pattern="([a-z[A-Z]])" title="Must contain at least one uppercase only text is allowed" required />
                <span asp-validation-for="ExecName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="font-weight-bold"></label>
                <input asp-for="Password" type="Password" class="form-control" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group ">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a asp-action="Register" class="btn btn-primary">NewUsers ClickHere</a>
            </div>
        </form>

    </div>

    <div class="col-md-4"></div>

</div>




   




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
